<!-- spinner_background_outline.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray" />
                    <padding
                        android:left="8dp"
                        android:right="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray" />
                    <padding
                        android:left="8dp"
                        android:right="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
